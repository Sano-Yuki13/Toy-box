<div class="container">
 <div class="row">
  <h3 class="py-3 col-8"><%= @user.name %></h3>
  <% if @user == current_user %>
   <p class="py-3 col-4"><%= link_to "プロフィール編集", edit_user_path, class:"btn btn-success" %></p>
  <% end %>
 </div>
      <table class="table">
      <thead>
        <tr>
          <th scope="col">タイトル</th>
          <th scope="col">説明</th>
          <th scope="col">タグ</th>
        </tr>
      </thead>
      <% @favorites.each do |favorite| %>
      <tbody>
        <tr>
          <th scope="row">
          <%= link_to favorite_path(favorite.id) do %>
           <%= favorite.title %>
          <% end %>
          </th>
          <td><%= favorite.body %></td>
          <td><%= favorite.tag %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
</div>
