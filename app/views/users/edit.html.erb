 <div class="container">
   <%= render 'devise/shared/flash' %>
   <div class="card col-sm-8 mx-auto mt-5">
    <div class="card-body">
     <h1 class="py-3">プロフィール編集</h1>

  <%= form_with model: @user do |f| %>

    <div class="form-group">
      <%= f.label :name, "名前", :class => "form-label" %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :email, "メールアドレス", :class => "form-label" %>
      <%= f.text_field :email, autofocus: true, autocomplete: "name", :class => "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit '更新' ,:class => "btn btn-primary btn-block"%>
    </div>

   <% end %>

   </div>
  </div>
 </div>