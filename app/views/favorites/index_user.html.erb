  <div class="container">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">タイトル</th>
          <th scope="col">説明</th>
          <th scope="col">タグ</th>
          <th scope="col">コメント数</th>
        </tr>
      </thead>
      <% @favorite.each do |favorite| %>
      <tbody>
        <tr>
          <th scope="row"><%= favorite.title %></th>
          <td><%= favorite.body %></td>
          <td><%= favorite.tag %></td>
          <td><%= favorite.favorite_comments.count %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
    <%= paginate @favorite %>
  </div>