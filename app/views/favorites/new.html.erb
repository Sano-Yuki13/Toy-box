<div class="container">
  <h1>投稿フォーム</h1>
  <%= form_with model: @favorite do |f| %>
    <h4>すきなもの</h4>
    <%= f.text_field :title %>
    <h4>説明</h4>
    <%= f.text_area :body %>
    <h4>タグ</h4>
    <%= f.text_field :tag %>
    <div>
     <%= f.label :status, "公開", value: true %>
     <%= f.radio_button :status, 'true' %>
    </div>
    <div>
     <%= f.label :status, "非公開", value: false %>
     <%= f.radio_button :status,'false' %>
    </div>
    <%= f.submit '投稿' %>
  <% end %>
</div>