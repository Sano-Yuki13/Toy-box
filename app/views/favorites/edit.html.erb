<h1>編集画面</h1>

<%= form_with model: @favorite do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>
  <h4>タグ</h4>
  <%= f.text_field :tag %>
  <div>
   <%= f.label :status, "公開", value: true %>
   <%= f.radio_button :status, 'true' %>
  </div>
  <div>
   <%= f.label :status, "非公開", value: false %>
   <%= f.radio_button :status,'false' %>
  </div>
  <%= f.submit '保存' %>

<% end %>