   <div class="card col-sm-8 mx-auto mt-5">
    <div class="card-body">
     <h1 class="py-3">投稿編集</h1>

  <%= form_with model: @favorite do |f| %>

    <div class="form-group">
      <%= f.label :title, "好きなもの", :class => "form-label" %>
      <%= f.text_field :title, autofocus: true, autocomplete: "name", :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :body, "説明", :class => "form-label" %>
      <%= f.text_area :body, rows: '2', autofocus: true, autocomplete: "name", :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :tag, "カテゴリ", :class => "form-label" %>
      <%= f.text_field :tag, autofocus: true, autocomplete: "name", :class => "form-control" %>
    </div>

    <div class="form-check">
     <%= f.radio_button :status, 'true' %>
     <%= f.label :status, "公開", value: true %>
    </div>
    <div class="form-check">
     <%= f.radio_button :status,'false' %>
     <%= f.label :status, "非公開", value: false %>
    </div>

    <div class="actions">
      <%= f.submit '更新' ,:class => "btn btn-primary btn-block"%>
    </div>

   <% end %>

   </div>
  </div